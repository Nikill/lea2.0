{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <h3>Gestion des utilisateurs</h3>
    <div class="row text-center">
        <div class="col-sm-6 col-lg-4">
        </div>
        <div class="col-sm-6 col-lg-4">
            <a href="{{ path('user_create') }}" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-amethyst">
                    <h4 class="widget-content-light">
                        <strong>Créer un nouvel</strong> utilisateur
                    </h4>
                </div>
                <div class="widget-extra-full">
                    <span class="h2 text-danger animation-expandOpen"><i class="fa fa-users"></i></span>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-lg-4">
        </div>
    </div>
    <table class="table table-bordered table-striped datatable" id="table-user">
        <thead>
            <tr>
                <th>Nom de l'utilisateur</th>
                <th>Email</th>
                <th>Actions</th>
                <th>Role</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    <td class="text-center">{{ user.username }}</td>
                    <td class="text-center">{{ user.email }}</td>
                    <td class="text-center">
                        {% for role in user.roles %}
                            {{ role }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>

                        <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i> Supprimer
                        </a>

                        <a href="#" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Profil
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        jQuery( document ).ready( function( $ ) {
            var $table1 = jQuery( '#table-user' );

            // Initialize DataTable
            $table1.DataTable( {
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });
        } );
    </script>
{% endblock %}