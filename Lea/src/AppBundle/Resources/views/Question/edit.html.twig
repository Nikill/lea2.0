{% block body %}
    <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
            Modifier question
        </h4>
    </div>
    <div class="modal-body">
        <div>
            {% form_theme formQuestion 'bootstrap_3_horizontal_layout.html.twig' %}

            {{ form_start( formQuestion ) }}
            {{ form_end( formQuestion ) }}
        </div>
        <div>
            {% if question.typeQuestion == 2 %}
                <h3>Choix</h3>
                <div class="form-group row">
                    {% form_theme formChoix 'bootstrap_3_horizontal_layout.html.twig' %}
                    {{ form_start(formChoix)}}
                    <div class="col-md-1">
                        {{ form_label(formChoix.rang) }}
                    </div>
                    <div class="col-md-2">
                        {{ form_widget(formChoix.rang) }}
                    </div>
                    <div class="col-md-2">
                        {{ form_label(formChoix.description) }}
                    </div>
                    <div class="col-md-5">
                        {{ form_widget(formChoix.description) }}
                    </div>


                    <div class="col-md-1">
                        {{ form_widget(formChoix.save, { 'attr': { 'class': 'btn btn-sm btn-primary'} }) }}
                    </div>
                    {{ form_rest(formChoix) }}
                    {{ form_end(formChoix) }}
                </div>
                <table class="table table-bordered table-striped datatable" id="table-choix">
                    <thead>
                    <tr>
                        <th>Rang</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for choi in question.choix %}
                        <tr>
                            <td class="text-center">{{ choi.rang }}</td>
                            <td class="text-center">{{ choi.description }}</td>
                            <td>
                                <a href="{{ path('choix_edit', {'id': choi.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                                    <i class="entypo-pencil"></i> Éditer
                                </a>
                                <a onclick="supprimerChoixQuestion({{ question.id}}, {{ choi.id }})" class="btn btn-danger btn-sm btn-icon icon-left">
                                    <i class="entypo-cancel"></i> Dissocier
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                    {% for choi in choix %}
                        <tr>
                            <td class="text-center">{{ choi.rang }}</td>
                            <td class="text-center">{{ choi.description }}</td>
                            <td>
                                <a href="{{ path('choix_edit', {'id': choi.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                                    <i class="entypo-pencil"></i> Éditer
                                </a>
                                <a onclick="ajouterChoixQuestion({{ question.id}}, {{ choi.id }})" class="btn btn-success btn-sm btn-icon icon-left">
                                    <i class="entypo-plus"></i> Ajouter
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
    <div class="modal-footer">
        <a onclick="reload()" class="btn btn-default">
            Fermer
        </a>
    </div>

{% endblock %}