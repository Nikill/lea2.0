{% extends "AppBundle::base.html.twig" %}

{% block body %}

    <h3>Users</h3>


    <table class="table table-bordered table-striped datatable" id="table-user">
        <thead>
            <tr>
                <th>User Name</th>
                <th>User Email</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    <td class="text-center">{{ user.username }}</td>
                    <td class="text-center">{{ user.email }}</td>
                    <td>
                        <a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i>
                            Edit
                        </a>

                        <a href="{{ path('users_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i> Delete
                        </a>

                        <a href="#" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Profile
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascript %}
    {{ parent() }}

    <script>
        jQuery( document ).ready( function( $ ) {
            var $table1 = jQuery( '#table-user' );

            // Initialize DataTable
            $table1.DataTable( {
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });

        } );
    </script>
{% endblock %}