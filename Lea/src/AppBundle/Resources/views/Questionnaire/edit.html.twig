{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <div class="block">
            <div class="block-title">
                <h2>Éditer un questionnaire</h2>
            </div>
            {{ form_start(form, { 'attr': { 'class': 'form-horizontal form-bordered'} }) }}
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.dateOuverture) }}
                        {{ form_widget(form.dateOuverture) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.dateFermeture) }}
                        {{ form_widget(form.dateFermeture) }}
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-sm btn-primary'} }) }}
                    </div>
                </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

    <h3>Questions</h3>
    <div class="row text-center">
        <div class="col-sm-6 col-lg-4">
        </div>
        <div class="col-sm-6 col-lg-4">
            <a href="{{ path('question_create') }}" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-amethyst">
                    <h4 class="widget-content-light">
                        <strong>Créer une nouvelle</strong> question
                    </h4>
                </div>
                <div class="widget-extra-full">
                    <span class="h2 text-danger animation-expandOpen"><i class="fa fa-users"></i></span>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-lg-4">
        </div>
    </div>
    <table class="table table-bordered table-striped datatable" id="table-question">
        <thead>
        <tr>
            <th>Description</th>
            <th>Type de la question</th>
            <th>Cible</th>
            <th>Choix</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
            {% for question in questionnaire.questions %}
                <tr>
                    <td class="text-center">{{ question.description }}</td>
                    <td class="text-center">{{ question.typeQuestionIs(question.typeQuestion) }}</td>
                    <td class="text-center">{{ question.cibleIs(question.cible) }}</td>
                    <td class="text-center">
                        {% for choix in question.choix %}
                            {{ choix.rang }}. {{ choix.description }}</br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>
                        <a href="{{ path('question_remove', {'id': questionnaire.id, 'id_question': question.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i> Enlever
                        </a>
                        <a href="{{ path('question_display', {'id': question.id}) }}" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Afficher
                        </a>
                    </td>
                </tr>
            {% endfor %}
            {% for question in questions %}
                <tr>
                    <td class="text-center">{{ question.description }}</td>
                    <td class="text-center">{{ question.typeQuestionIs(question.typeQuestion) }}</td>
                    <td class="text-center">{{ question.cibleIs(question.cible) }}</td>
                    <td class="text-center">
                        {% for choix in question.choix %}
                            {{ choix.rang }}. {{ choix.description }}</br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>
                        <a href="{{ path('question_add', {'id': questionnaire.id, 'id_question': question.id}) }}" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-plus"></i> Ajouter
                        </a>
                        <a href="{{ path('question_display', {'id': question.id}) }}" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Afficher
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function($){
            var $table1 = jQuery('#table-question');

            // Initialize DataTable
            $table1.DataTable({
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });
        });
    </script>
{% endblock %}