{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <div class="block">
            <div class="block-title">
                <h2>Ã‰diter un utilisateur</h2>
            </div>
            {{ form_start(form, { 'attr': { 'class': 'form-horizontal form-bordered'} }) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        {{ form_label(form.username) }}
                        {{ form_widget(form.username) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.ville) }}
                        {{ form_widget(form.ville) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.codePostal) }}
                        {{ form_widget(form.codePostal) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.telephoneFixe) }}
                        {{ form_widget(form.telephoneFixe) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.telephonePortable) }}
                        {{ form_widget(form.telephonePortable) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.fax) }}
                        {{ form_widget(form.fax) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.dateNaissance) }}
                        {{ form_widget(form.dateNaissance) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_label(form.estHandicape) }}
                        {{ form_widget(form.estHandicape) }}
                    </div>

                    {% if (is_granted('ROLE_SUPER_ADMIN')) %}
                    <div class="col-md-9">
                        {{ form_label(form.roles) }}
                        {{ form_widget(form.roles) }}
                    </div>
                    {% endif %}
                </div>
                <div class="form-group form-actions">
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-sm btn-primary'} }) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}