{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <div class="col-md-6">
        <div class="col-md-10 row">
            <h3>Modifier le questionnaire</h3>
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

            {{ form_start( form ) }}
            {{ form_end( form ) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="col-md-10 row">
            <h3>Créer une question</h3>
            {% form_theme formQuestion 'bootstrap_3_horizontal_layout.html.twig' %}

            {{ form_start( formQuestion ) }}
            {{ form_end( formQuestion ) }}
        </div>
    </div>
    <br><br>

    <table class="table table-bordered table-striped datatable" id="table-question">
        <h3>Liste des questions</h3>
        <thead>
        <tr>
            <th>Description</th>
            <th>Type de la question</th>
            <th>Cible</th>
            <th>Choix</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
            {% for question in questionnaire.questions %}
                <tr>
                    <td class="text-center">{{ question.description }}</td>
                    <td class="text-center">{{ question.typeQuestionIs(question.typeQuestion) }}</td>
                    <td class="text-center">{{ question.cibleIs(question.cible) }}</td>
                    <td class="text-center">
                        {% for choix in question.choix %}
                            {{ choix.rang }}. {{ choix.description }}</br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>

                        <button type="button" class="btn btn-danger btn-sm btn-icon icon-left" data-toggle="modal" data-target="#modalSupprimerQuestion{{ questionnaire.id }}_{{ question.id }}">
                            <i class="entypo-cancel"></i> Enlever
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="modalSupprimerQuestion{{ questionnaire.id }}_{{ question.id }}" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Supprimer question</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>Confirmez-vous la supression de la question "{{question.description}}" dans le questionnaire ?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="{{ path('question_remove',{'id': questionnaire.id, 'id_question': question.id}) }}" class="btn btn-default">
                                            Confirmer
                                        </a>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <a href="{{ path('question_display', {'id': question.id}) }}" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Afficher
                        </a>
                    </td>
                </tr>
            {% endfor %}
            {% for question in questions %}
                <tr>
                    <td class="text-center">{{ question.description }}</td>
                    <td class="text-center">{{ question.typeQuestionIs(question.typeQuestion) }}</td>
                    <td class="text-center">{{ question.cibleIs(question.cible) }}</td>
                    <td class="text-center">
                        {% for choix in question.choix %}
                            {{ choix.rang }}. {{ choix.description }}</br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>
                        <a href="{{ path('question_add', {'id': questionnaire.id, 'id_question': question.id}) }}" class="btn btn-success btn-sm btn-icon icon-left">
                            <i class="entypo-plus"></i> Ajouter
                        </a>
                        <a href="{{ path('question_display', {'id': question.id}) }}" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Afficher
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function($){
            var $table1 = jQuery('#table-question');

            // Initialize DataTable
            $table1.DataTable({
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });
        });
    </script>
{% endblock %}