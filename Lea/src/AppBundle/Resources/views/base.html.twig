
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="author" content="Theme by Team Le@ 2.0" />

        <link rel="icon" href="assets/images/favicon.ico">

        <title>{% block title %}LEA{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("assets/js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/font-icons/entypo/css/entypo.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/bootstrap.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/bart-core.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/bart-theme.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/bart-forms.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/custom.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/js/datatables/datatables.css") }}">
        {% endblock %}

        <script src="{{ asset("assets/js/jquery-1.11.3.min.js") }}"></script>

        <!--[if lt IE 9]><script src="{{ asset("assets/js/ie8-responsive-file-warning.js") }}"></script><![endif]-->

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body class="page-body" data-url="http://bart-theme.dev">
        <div class="page-container">
            <div class="sidebar-menu fixed">
                <div class="sidebar-menu-inner">
                    <header class="logo-env">
                        <!-- logo -->
                        <div class="logo">
                            <a href="{{ path("homepage") }}">
                                <img src="{{ asset("assets/images/logo.png") }}" width="120" alt="" />
                            </a>
                        </div>

                        <div class="sidebar-mobile-menu visible-xs">
                            <a href="#" class="with-animation"><!-- add class "with-animation" to support animation -->
                                <i class="entypo-menu"></i>
                            </a>
                        </div>
                    </header>

                    {% include '@App/UI/sidebar.html.twig' %}
                </div>
            </div>

            <div class="main-content">
                {% include '@App/UI/topmenu.html.twig' %}
                <hr />

                {% block body %}
                {% endblock %}

                {% include '@App/UI/footer.html.twig' %}
            </div>
        </div>

        {% block javascript %}
            <!-- Bottom scripts (common) -->
            <script src="{{ asset("assets/js/gsap/TweenMax.min.js") }}"></script>
            <script src="{{ asset("assets/js/jquery-ui/js/jquery-ui-1.10.3.minimal.min.js") }}"></script>
            <script src="{{ asset("assets/js/bootstrap.js") }}"></script>
            <script src="{{ asset("assets/js/joinable.js") }}"></script>
            <script src="{{ asset("assets/js/resizeable.js") }}"></script>
            <script src="{{ asset("assets/js/bart-api.js") }}"></script>
            <script src="{{ asset("assets/js/datatables/datatables.js") }}"></script>
            <script src="{{ asset("assets/js/bootstrap-datepicker.js") }}"></script>
            <!-- JavaScripts initializations and stuff -->
            <script src="{{ asset("assets/js/bart-custom.js") }}"></script>
        {% endblock %}
    </body>
</html>