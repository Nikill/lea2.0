{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <h2>Ensemble des types de document</h2>
    <div class="row text-center">
        <div class="col-sm-6 col-lg-4">
        </div>
        <div class="col-sm-6 col-lg-4">
            <a href="{{ path('typeDocument_create') }}" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-amethyst">
                    <h4 class="widget-content-light">
                        <strong>Créer un nouveau type</strong> de document
                    </h4>
                </div>
                <div class="widget-extra-full">
                    <span class="h2 text-danger animation-expandOpen"><i class="fa fa-users"></i></span>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-lg-4">
        </div>
    </div>
    <table class="table table-bordered table-striped datatable" id="table-typeDocument">
        <thead>
            <tr>
                <th>Libellé</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for typeDocument in typesDocument %}
                <tr>
                    <td class="text-center">{{ typeDocument.libelle }}</td>
                    <td>
                        <a href="{{ path('typeDocument_edit', {'id': typeDocument.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>

                        <a href="{{ path('typeDocument_delete', {'id': typeDocument.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        jQuery( document ).ready( function( $ ) {
            var $table1 = jQuery( '#table-typeDocument' );

            // Initialize DataTable
            $table1.DataTable( {
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });
        } );
    </script>
{% endblock %}