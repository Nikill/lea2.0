{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <h3>Ensemble des questionnaires</h3>
    <div class="row text-center">
        <div class="col-sm-6 col-lg-4">
        </div>
        <div class="col-sm-6 col-lg-4">
            <a href="{{ path('questionnaire_create') }}" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-amethyst">
                    <h4 class="widget-content-light">
                        <strong>Créer un nouveau</strong> questionnaire
                    </h4>
                </div>
                <div class="widget-extra-full">
                    <span class="h2 text-danger animation-expandOpen"><i class="fa fa-users"></i></span>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-lg-4">
        </div>
    </div>
    <table class="table table-bordered table-striped datatable" id="table-questionnaire">
        <thead>
            <tr>
                <th>Description</th>
                <th>Type du questionnaire</th>
                <th>Date d'ouverture</th>
                <th>Date de fermeture</th>
                <th>Promotion(s)</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for questionnaire in questionnaires %}
                <tr>
                    <td class="text-center">{{ questionnaire.description }}</td>
                    <td class="text-center">{{ questionnaire.typeIs(questionnaire.type) }}</td>
                    <td class="text-center">{{ questionnaire.dateOuverture|date('d M Y') }}</td>
                    <td class="text-center">{{ questionnaire.dateFermeture|date('d M Y') }}</td>
                    <td class="text-center">
                        {% for promotion in questionnaire.promotions %}
                            {{ promotion.nom }}.' : '.{{ promotion.anneeDebut|date('d M Y') }}.{{ promotion.anneeFin|date('d M Y') }}</br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('questionnaire_edit', {'id': questionnaire.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>
                        <a href="{{ path('questionnaire_delete', {'id': questionnaire.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i> Supprimer
                        </a>
                        <a href="{{ path('questionnaire_display', {'id': questionnaire.id}) }}" class="btn btn-info btn-sm btn-icon icon-left">
                            <i class="entypo-info"></i> Afficher
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function($){
            var $table1 = jQuery('#table-questionnaire');

            // Initialize DataTable
            $table1.DataTable({
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });
        });
    </script>
{% endblock %}