{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <div class="block">
            <div class="block-title">
                <h2>Ã‰diter un document</h2>
            </div>
            {{ form_start(form, { 'attr': { 'class': 'form-horizontal form-bordered' } }) }}
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre) }}
                    </div>
                    <div class="col-md-3 control-label">
                        {{ form_label(form.nomFichier) }}
                        {{ form_widget(form.nomFichier) }}
                    </div>
                    <div class="col-md-3 control-label">
                        <p>Choisir un nouveau fichier</p>
                        <input type="file" name="fichier" />
                    </div>
                    <div class="col-md-3 control-label">
                        {{ form_label(form.typeDocument) }}
                        {{ form_widget(form.typeDocument) }}
                    </div>
                    <div class="col-md-3 control-label">
                        {{ form_label(form.anneeScolaire) }}
                        {{ form_widget(form.anneeScolaire) }}
                    </div>
                    <div class="col-md-3 control-label">
                        {{ form_label(form.visibleMAP) }}
                        {{ form_widget(form.visibleMAP) }}
                    </div>
                    <div class="col-md-3 control-label">
                        {{ form_label(form.visibleTuteur) }}
                        {{ form_widget(form.visibleTuteur) }}
                    </div>
                    <div class="col-md-3 control-label">
                        {{ form_label(form.visibleResponsable) }}
                        {{ form_widget(form.visibleResponsable) }}
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-sm btn-primary'} }) }}
                    </div>
                </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}