{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <h3>Ensemble des années scolaires</h3>
    <div class="row text-center">
        <div class="col-sm-6 col-lg-4">
        </div>
        <div class="col-sm-6 col-lg-4">
            <a href="{{ path('anneeScolaire_create') }}" class="widget widget-hover-effect2">
                <div class="widget-extra themed-background-amethyst">
                    <h4 class="widget-content-light">
                        <strong>Créer une nouvelle </strong> année scolaire
                        <div class="col-md-offset-3 col-md-6">
                            <div class="block">
                                <div class="block-title">
                                    <h2>Nouvelle année scolaire</h2>
                                </div>
                                {{ form_start(form, { 'attr': { 'class': 'form-horizontal form-bordered'} }) }}
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </h4>
                </div>
                <div class="widget-extra-full">
                    <span class="h2 text-danger animation-expandOpen"><i class="fa fa-users"></i></span>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-lg-4">
        </div>
    </div>
    <table class="table table-bordered table-striped datatable" id="table-anneeScolaire">
        <thead>
            <tr>
                <th>Libellé</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for anneeScolaire in anneesScolaires %}
                <tr>
                    <td class="text-center">{{ anneeScolaire.libelle }}</td>
                    <td>
                        <a href="{{ path('anneeScolaire_edit', {'id': anneeScolaire.id}) }}" class="btn btn-default btn-sm btn-icon icon-left">
                            <i class="entypo-pencil"></i> Éditer
                        </a>

                        <a href="{{ path('anneeScolaire_delete', {'id': anneeScolaire.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left">
                            <i class="entypo-cancel"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        jQuery( document ).ready( function( $ ) {
            var $table1 = jQuery( '#table-anneeScolaire' );

            // Initialize DataTable
            $table1.DataTable( {
                "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "bStateSave": true
            });
        } );
    </script>
{% endblock %}